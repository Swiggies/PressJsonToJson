<Controls:MetroWindow x:Class="PressJsonToJson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PressJsonToJson"
        
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Press Json to Json" Height="455" Width="525" MinWidth="525" MinHeight="454">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="0"/>
            <ColumnDefinition MinWidth="0"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListMaps" Margin="10,10,5,0" SelectionMode="Multiple" BorderThickness="1" BorderBrush="#FFCCCCCC"/>
        <ListBox x:Name="ListVariants" Margin="5,10,10,0" SelectionMode="Multiple" Grid.Column="1" BorderThickness="1" BorderBrush="#FFCCCCCC"/>
        <GridSplitter HorizontalAlignment="Stretch" Height="1" Margin="10,5,10,0" ShowsPreview="True" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2" Background="#FFCCCCCC"/>
        <Button x:Name="Btn_Convert" Content="Json" Margin="10,5,10,0" VerticalAlignment="Top" Click="Button_Click" Grid.ColumnSpan="2" Grid.Row="2" Controls:ButtonHelper.CornerRadius="0" FontSize="10"/>
        <TextBox x:Name="txt_Ouput" Margin="10,5,10,10" TextWrapping="Wrap" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Grid.Row="3"/>
        <Button Content="FTP" HorizontalAlignment="Left" Margin="74,0,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Controls:MetroWindow>
